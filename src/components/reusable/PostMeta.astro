---
import Calendar from "../icons/Calendar.astro";
import Tag from "../icons/Tag.astro";

const { post } = Astro.props;
---

<div class="meta">
    <section class="date">
        <div class="icon">
            <Calendar />
        </div>
        <p style="font-weight: bold; margin: 0; color: var(--muted-color)">
            {post.data.date}
        </p>
    </section>
    <section class="tags">
        <div class="icon">
            <Tag />
        </div>
        {
            post.data.tags.map((tag: string, i: number) => {
                const slash = i + 1 < post.data.tags.length;
                return (
                    <Fragment key={i}>
                        <a
                            style="font-size: medium; padding: 0.5rem; color: var(--muted-color);"
                            class="ghost"
                            href={`/posts/${tag}`}
                        >
                            {tag}
                        </a>
                        <div style="display: inline; user-select: none;">
                            {slash ? "/" : null}
                        </div>
                    </Fragment>
                );
            })
        }
    </section>
</div>

<style>
    .meta {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        margin: 0.5rem 0;
    }

    .meta .icon {
        height: 1.5rem;
        width: 1.5rem;
        color: var(--primary-color);
        background-color: var(--secondary-background-color);
        border-radius: var(--border-rounded);
        padding: 0.25rem;
        border-radius: 0.25rem;
    }

    .meta section {
        display: flex;
        gap: 0.5rem;
        align-items: center;
    }
</style>
